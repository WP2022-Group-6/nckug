doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Team Debit

    // Third Party CSS
    link(href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet" type="text/css")
    
    // Customized CSS
    link(href="./main.sass" rel="stylesheet")
  body
    section.main-top
      .main-dashed
        .main-top-ellipse
        .main-top-circuit
        .main-top-text
          i.big.align.justify.icon
          p 群組名稱
          h2 總金額
          h1 17036
          h3 NTD
    
    section.home-page
      h3 每日花費
      p 今日 1392 NTD
      .hone-barchart-div
        canvas#barChart
      h3 近期紀錄
      .home-recored
        each val in [1, 2, 3, 4]
          div
            h3 名稱
            h3 金額
            i.big.check.circle.outline.icon
      
    section.group-page.transition.hidden
      h3 每人餘額
      .group-recored
        each val in [1, 2]
          div
            div
            h3 名稱
            h3 金額
        .group-invite-others
          div
          h3 邀請其他朋友
      button 群組結算


    section.main-buttom-banner
      i.big.home.icon
      i.big.list.alternate.outline.icon
      i.big.plus.icon
      i.big.chart.bar.icon
      i.big.users.icon
    
    section.remittance-page.transition.hidden
      h1 匯款
      .remittance-group
        i.huge.icons
          i.image.icon
          i.top.right.corner.add.icon
      p 群組名稱
      section.remittance-unpaid
        h2 目前餘額：
        h2 仍須匯款：
        .remittance-account
          h3 匯款帳號
          h3 1234567 1234567
      section.remittance-paid.transition.hidden
        p 成員名稱
        i.huge.check.icon
        h2 已匯款
      button 複製帳號
    
    section.add-event-page
      i.large.close.icon
      .add-event-money
        h1 金額
        div
          input(type="text")
      .add-event-image
        i.big.image.icon
      section.add-event-content
        h2 支出項目
        input(type="text")
        h2 類型
        input(type="text")
        h2 備註
        input(type="text")
        h2 付款人
        div
          div
          i.big.caret.down.icon
        h2 分帳人
        div
          div
          div
          i.big.caret.down.icon
        button 儲存
      
      section.split-account.transition.hidden
        .split-account-navbar
          i.large.percent.icon.split-way
          .split-way
            i.large.plus.icon
            i.large.minus.icon
          i.large.dollar.sign.icon.split-way
          i.large.spinner.icon.split-way
        .split-account-content
          h2 比例
          .split-content-depiction
            p 按每人佔比分配
            i.circle.outline.icon
              h3 平分
          .split-recored
            each val in [1, 2, 3]
              div
                div
                h3 名稱
                input(placeholder="平分金額")
        button 確定

      section.denial-reason-page
        h2 支出項目
        input(type="text")
        h1 不同意
        .denial-container
          h3 總金額輸入錯誤
          h3 分帳金額錯誤
          input(placeholder="其他備註")

    // JavaScript
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    script(src="main.js")
